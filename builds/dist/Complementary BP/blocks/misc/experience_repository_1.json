{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "complementary:experience_repository_1",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.misc.xprepos"
			}
		},
		"events": {
			"complementary:experience_handler": {
				"sequence": [
					{
						"condition": "!query.is_sneaking",
						"run_command": {
							"command": [
								"xp 15L @p",
								"playsound random.levelup @a ~~~",
								"playsound respawn_anchor.deplete @a ~~~"
							]
						},
						"set_block": {
							"block_type": "complementary:experience_repository"
						}
					},
					{
						"condition": "query.player_level>14&&query.is_sneaking",
						"run_command": {
							"command": [
								"xp -15L @p",
								"playsound respawn_anchor.charge @a ~~~"
							]
						},
						"set_block": {
							"block_type": "complementary:experience_repository_2"
						}
					}
				]
			},
			"complementary:destroy": {
				"run_command": {
					"command": [
						"playsound beacon.deactivate @a ~~~ 10 0.5"
					]
				}
			},
			"complementary:place": {
				"run_command": {
					"command": [
						"playsound beacon.activate @a ~~~ 10 0.8"
					]
				}
			}
		},
		"components": {
			"minecraft:light_emission": 5,
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 3
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 25
			},
			"minecraft:on_interact": {
				"event": "complementary:experience_handler"
			},
			"minecraft:on_player_destroyed": {
				"event": "complementary:destroy"
			},
			"minecraft:on_player_placing": {
				"event": "complementary:place"
			},
			"tag:ironpickaxeDiggable": {}
		}
	}
}